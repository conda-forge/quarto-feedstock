index 415003991..f21617e04 100644
--- a/package/src/bld.ts
+++ b/package/src/bld.ts
@@ -17,6 +17,7 @@ import {
   compileQuartoLatexmkCommand,
 } from "./common/compile-quarto-latexmk.ts";
 import { makeInstallerWindows } from "./windows/installer.ts";
